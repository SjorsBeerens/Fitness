@page "/dashboard"
@model Fitness.Pages.DashboardModel
@{
	ViewData["Title"] = "Dashboard - Fitness";
	Layout = "_Layout";
}
<main class="container mx-auto px-4 py-8">
	<div class="mb-8">
		<h1 class="text-3xl font-bold">Welcome back!</h1>
		<p class="text-gray-600">Here's your fitness overview for today</p>
	</div>

	<!-- Overview Cards -->
	<div class="grid md:grid-cols-3 gap-6 mb-8">
		<!-- Today's Workout -->
		<div class="bg-white p-6 rounded-lg shadow-sm">
			<div class="flex justify-between items-center mb-4">
				<h2 class="text-gray-600">Today's Workout</h2>
				<div class="w-6 h-6">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h.5A2.5 2.5 0 0020 5.5v-1.5" />
					</svg>
				</div>
			</div>
			<h3 class="text-2xl font-bold mb-1">Upper Body</h3>
			<p class="text-gray-600">45 min remaining</p>
		</div>

		<!-- Calories -->
		<div class="bg-white p-6 rounded-lg shadow-sm">
			<div class="flex justify-between items-center mb-4">
				<h2 class="text-gray-600">Calories</h2>
				<div class="w-6 h-6">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
					</svg>
				</div>
			</div>
			<h3 class="text-2xl font-bold mb-1">1390/2172</h3>
			<p class="text-gray-600">782 remaining</p>
		</div>

		<!-- Personal Training Session -->
		<div class="bg-white p-6 rounded-lg shadow-sm">
			<div class="flex justify-between items-center mb-4">
				<h2 class="text-gray-600">Personal training Session</h2>
				<div class="w-6 h-6">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
					</svg>
				</div>
			</div>
			<h3 class="text-2xl font-bold mb-1">16:00-17:00</h3>
			<p class="text-gray-600">01-01-2025</p>
		</div>
	</div>

	<!-- Next Training and Nutrition -->
	<div class="grid md:grid-cols-2 gap-6 mb-8">
		<!-- Next Training Session -->
		<div class="bg-white p-6 rounded-lg shadow-sm">
			<h2 class="text-xl font-bold mb-4">Next Training Session</h2>
			<div class="mb-4">
				<h3 class="text-lg font-semibold">Upper Body Workout</h3>
				<p class="text-gray-600">Today at 6:00 PM</p>
			</div>
			<div class="flex items-center mb-6">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
				</svg>
				<span class="text-gray-600">45 minutes</span>
			</div>
			<button class="bg-black text-white px-4 py-2 rounded-md hover:bg-gray-800 transition">
				Log Workout
			</button>
		</div>

		<!-- Today's Nutrition -->
		<div class="bg-white p-6 rounded-lg shadow-sm">
			<h2 class="text-xl font-bold mb-4">Today's Nutrition</h2>

			<!-- Protein -->
			<div class="mb-4">
				<div class="flex justify-between mb-1">
					<span>Protein</span>
					<span>119g/135g</span>
				</div>
				<div class="w-full bg-gray-200 rounded-full h-2.5">
					<div class="bg-black h-2.5 rounded-full" style="width: 88%"></div>
				</div>
			</div>

			<!-- Fats -->
			<div class="mb-4">
				<div class="flex justify-between mb-1">
					<span>Fats</span>
					<span>53g/60g</span>
				</div>
				<div class="w-full bg-gray-200 rounded-full h-2.5">
					<div class="bg-black h-2.5 rounded-full" style="width: 88%"></div>
				</div>
			</div>

			<!-- Carbs -->
			<div>
				<div class="flex justify-between mb-1">
					<span>Carbs</span>
					<span>111g/271g</span>
				</div>
				<div class="w-full bg-gray-200 rounded-full h-2.5">
					<div class="bg-black h-2.5 rounded-full" style="width: 41%"></div>
				</div>
			</div>
		</div>
	</div>

	<!-- Recent Activity -->
	<div class="bg-white p-6 rounded-lg shadow-sm">
		<h2 class="text-xl font-bold mb-6">Recent Activity</h2>

		<!-- Completed Workout -->
		<div class="border-b pb-4 mb-4">
			<div class="flex items-start justify-between">
				<div class="flex">
					<div class="mr-4">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h.5A2.5 2.5 0 0020 5.5v-1.5" />
						</svg>
					</div>
					<div>
						<h3 class="font-semibold">Completed Leg Workout</h3>
						<p class="text-gray-600 text-sm">Yesterday at 7:30 PM</p>
					</div>
				</div>
				<span class="text-gray-600">150 min</span>
			</div>
		</div>

		<!-- Logged Breakfast -->
		<div class="border-b pb-4 mb-4">
			<div class="flex items-start justify-between">
				<div class="flex">
					<div class="mr-4">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
						</svg>
					</div>
					<div>
						<h3 class="font-semibold">Logged Breakfast</h3>
						<p class="text-gray-600 text-sm">Today at 8:00 AM</p>
					</div>
				</div>
				<span class="text-gray-600">520 kcal</span>
			</div>
		</div>

		<!-- Weight Check-in -->
		<div>
			<div class="flex items-start justify-between">
				<div class="flex">
					<div class="mr-4">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
						</svg>
					</div>
					<div>
						<h3 class="font-semibold">Weight Check-in</h3>
						<p class="text-gray-600 text-sm">Today at 7:00 AM</p>
					</div>
				</div>
				<span class="text-gray-600">81.6 kg</span>
			</div>
		</div>
	</div>
</main>