@page "/about-us"
@model Fitness.Pages.AboutUsModel
@{
	ViewData["Title"] = "about-us - Fitness";
	Layout = "startup_layout";
}
<main class="container mx-auto px-4 py-12 max-w-4xl">
	<div class="text-center mb-12">
		<h1 class="text-4xl font-bold mb-4">About Us</h1>
		<div class="w-20 h-1 bg-black mx-auto"></div>
	</div>

	<div class="bg-white rounded-lg shadow-sm p-8 md:p-12">
		<div class="flex flex-col md:flex-row items-center mb-10">
			<div class="w-32 h-32 mb-6 md:mb-0 md:mr-8">
				<svg viewBox="0 0 100 100" class="w-full h-full">
					<path d="M50,10 C60,10 70,15 75,25 C80,15 90,10 95,20 C100,30 90,40 85,45 C90,50 95,60 90,70 C85,80 75,75 70,70 C65,80 55,90 50,90 C45,90 35,80 30,70 C25,75 15,80 10,70 C5,60 10,50 15,45 C10,40 0,30 5,20 C10,10 20,15 25,25 C30,15 40,10 50,10 Z"
						  fill="none"
						  stroke="black"
						  stroke-width="2" />
				</svg>
			</div>
			<h2 class="text-3xl font-bold">My Fitness Project</h2>
		</div>

		<div class="space-y-6 text-gray-700 leading-relaxed">
			<p>
				Welcome to My Fitness Project – a personal fitness application designed to support you in reaching your goals in training, health, and nutrition.
			</p>

			<p>
				This app was created by Sjors Beerens, a second-semester student studying ICT at Fontys University of Applied Sciences in Eindhoven, the Netherlands. With a strong interest in programming and a passion for fitness, I wanted to combine both worlds into a useful, user-friendly application.
			</p>

			<p>
				The idea for this project came from the need for one central platform where users can plan workouts, track their progress, log nutrition, and easily schedule sessions with personal trainers. My goal is to use technology to make staying fit and healthy more accessible and motivating.
			</p>

			<p>
				My Fitness Project is part of an individual semester project, giving me the opportunity to further develop my skills in software development, user experience design, and data management.
			</p>
		</div>

		<div class="mt-12 border-t border-gray-200 pt-8">
			<div class="grid md:grid-cols-3 gap-6 text-center">
				<div class="p-4">
					<div class="w-12 h-12 mx-auto mb-4">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-full w-full text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h.5A2.5 2.5 0 0020 5.5v-1.5" />
						</svg>
					</div>
					<h3 class="font-bold text-lg mb-2">Workout Planning</h3>
					<p class="text-gray-600">Create and customize your workout routines with our easy-to-use interface.</p>
				</div>

				<div class="p-4">
					<div class="w-12 h-12 mx-auto mb-4">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-full w-full text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
						</svg>
					</div>
					<h3 class="font-bold text-lg mb-2">Progress Tracking</h3>
					<p class="text-gray-600">Monitor your fitness journey with detailed progress tracking and analytics.</p>
				</div>

				<div class="p-4">
					<div class="w-12 h-12 mx-auto mb-4">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-full w-full text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
						</svg>
					</div>
					<h3 class="font-bold text-lg mb-2">Personal Trainers</h3>
					<p class="text-gray-600">Connect with certified trainers and schedule personalized sessions.</p>
				</div>
			</div>
		</div>
	</div>
</main>