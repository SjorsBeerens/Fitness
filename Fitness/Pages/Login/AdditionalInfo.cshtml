@page "/additional-info"
@model Fitness.Pages.Login.AdditionalInfoModel
@{
    ViewData["Title"] = "Additional Information";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Additional Information - Fitness Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold">Tell us more about yourself</h1>
            <p class="text-gray-600 mt-2">This helps us personalize your fitness experience</p>
        </div>

        <form method="post">
            @Html.AntiForgeryToken()
            <div class="mb-6">
                <label for="weight" class="block text-gray-700 mb-2">Weight (kg)</label>
                <input id="weight"
                       name="Weight"
                       type="number"
                       step="0.1"
                       class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200"
                       placeholder="Enter your weight" />
            </div>

            <div class="mb-6">
                <label for="height" class="block text-gray-700 mb-2">Height (cm)</label>
                <input id="height"
                       name="Height"
                       type="number"
                       step="0.1"
                       class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200"
                       placeholder="Enter your height" />
            </div>

            <div class="mb-6">
                <label for="age" class="block text-gray-700 mb-2">Age</label>
                <input id="age"
                       name="Age"
                       type="number"
                       class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200"
                       placeholder="Enter your age" />
            </div>

            <div class="mb-6">
                <label for="gender" class="block text-gray-700 mb-2">Gender</label>
                <select id="gender"
                        name="Gender"
                        class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200">
                    <option value="" disabled selected>Select your gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <div class="mb-6">
                <label for="activity" class="block text-gray-700 mb-2">Activity Level</label>
                <select id="activity"
                        name="ActivityLevel"
                        class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200">
                    <option value="" disabled selected>Select your activity level</option>
                    <option value="1,2">No exercise</option>
                    <option value="1,375">Light exercise</option>
                    <option value="1,55">Moderate exercise</option>
                    <option value="1,725">Heavy exercise</option>
                    <option value="1,9">Very heavy exercise</option>
                </select>
            </div>

            <button type="submit"
                    class="w-full bg-black text-white p-3 rounded-md font-medium hover:bg-gray-800 transition">
                Submit
            </button>
        </form>
    </div>
</body>
</html>
