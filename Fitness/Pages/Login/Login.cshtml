@page "/login"
@model Fitness.Pages.Login.LoginModel
@{
	ViewData["Title"] = "Login";
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Fitness Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
        <div class="text-center mb-8">
            <div class="w-16 h-16 mx-auto mb-4">
                <svg viewBox="0 0 100 100" class="w-full h-full">
                    <path d="M50,10 C60,10 70,15 75,25 C80,15 90,10 95,20 C100,30 90,40 85,45 C90,50 95,60 90,70 C85,80 75,75 70,70 C65,80 55,90 50,90 C45,90 35,80 30,70 C25,75 15,80 10,70 C5,60 10,50 15,45 C10,40 0,30 5,20 C10,10 20,15 25,25 C30,15 40,10 50,10 Z"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2" />
                </svg>
            </div>
            <h1 class="text-2xl font-bold">Fitness</h1>
            <p class="text-gray-600 mt-2">Welcome back! Please login to your account.</p>
        </div>

        <form action="dashboard.html">
            <div class="mb-6">
                <label for="email" class="block text-gray-700 mb-2">Email address</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <input id="email"
                           type="email"
                           class="pl-10 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200"
                           placeholder="Enter your email" />
                </div>
            </div>

            <div class="mb-2">
                <label for="password" class="block text-gray-700 mb-2">Password</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <input id="password"
                           type="password"
                           class="pl-10 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200"
                           placeholder="Enter your password" />
                </div>
            </div>

            <div class="flex justify-end mb-6">
                <a href="#" class="text-sm text-gray-600 hover:text-gray-800">
                    Forgot password?
                </a>
            </div>

            <button type="submit"
                    class="w-full bg-black text-white p-3 rounded-md font-medium hover:bg-gray-800 transition">
                Sign in
            </button>
        </form>

        <div class="mt-6 text-center">
            <p class="text-gray-600">
                Don't have an account?
                <a href="/signup" class="text-black font-medium hover:underline">
                    Sign up
                </a>
            </p>
        </div>
    </div>
</body>
</html>