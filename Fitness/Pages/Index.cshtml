@page
@model Fitness.Pages.IndexModel
@{
    ViewData["Title"] = "index - Fitness";
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fitness Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen flex flex-col">
    <!-- Navigation -->
    <header class="border-b">
        <div class="mx-auto px-4 py-4 flex items-center justify-between">
            <div class="flex items-center space-x-2">
                <div class="w-10 h-10">
                    <svg viewBox="0 0 100 100" class="w-full h-full">
                        <path d="M50,10 C60,10 70,15 75,25 C80,15 90,10 95,20 C100,30 90,40 85,45 C90,50 95,60 90,70 C85,80 75,75 70,70 C65,80 55,90 50,90 C45,90 35,80 30,70 C25,75 15,80 10,70 C5,60 10,50 15,45 C10,40 0,30 5,20 C10,10 20,15 25,25 C30,15 40,10 50,10 Z"
                              fill="none"
                              stroke="currentColor"
                              stroke-width="2" />
                    </svg>
                </div>
                <span class="font-bold text-xl">Fitness</span>
            </div>

            <nav class="hidden md:flex items-center space-x-8">
                <a href="index.html" class="text-gray-800 hover:text-gray-600">Home</a>
                <a href="#" class="text-gray-800 hover:text-gray-600">Personal Trainer</a>
                <a href="#" class="text-gray-800 hover:text-gray-600">Calories</a>
                <a href="#" class="text-gray-800 hover:text-gray-600">Training Schedule</a>
                <a href="#" class="text-gray-800 hover:text-gray-600">About Us</a>
            </nav>

            <div class="flex items-center space-x-4">
                <a href="login.html" class="text-gray-800 hover:text-gray-600">Log In</a>
                <a href="#" class="bg-black text-white px-4 py-2 rounded-md hover:bg-gray-800 transition">Sign Up</a>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="py-16 md:py-24">
        <div class="mx-auto px-4 grid md:grid-cols-2 gap-12 items-center">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold mb-6">Your All-in-One Fitness Platform</h1>
                <p class="text-lg text-gray-600 mb-8">
                    Transform your fitness journey with personalized training, nutrition tracking, and expert guidance.
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="#"
                       class="bg-black text-white px-6 py-3 rounded-md text-center hover:bg-gray-800 transition">
                        Get Started
                    </a>
                    <a href="login.html"
                       class="border border-gray-300 px-6 py-3 rounded-md text-center hover:bg-gray-50 transition">
                        Log In
                    </a>
                </div>
            </div>

            <div class="flex justify-center">
                <div class="relative w-full max-w-md">
                    <div class="w-32 h-32 mx-auto mb-4">
                        <svg viewBox="0 0 100 100" class="w-full h-full">
                            <path d="M50,10 C60,10 70,15 75,25 C80,15 90,10 95,20 C100,30 90,40 85,45 C90,50 95,60 90,70 C85,80 75,75 70,70 C65,80 55,90 50,90 C45,90 35,80 30,70 C25,75 15,80 10,70 C5,60 10,50 15,45 C10,40 0,30 5,20 C10,10 20,15 25,25 C30,15 40,10 50,10 Z"
                                  fill="none"
                                  stroke="currentColor"
                                  stroke-width="2" />
                        </svg>
                    </div>
                    <div class="text-center">
                        <h2 class="text-7xl font-bold mb-2">Fitness</h2>
                        <p class="text-xl tracking-widest">TRAIN. LOG. GROW.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-16 bg-gray-50">
        <div class="mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-16">Everything You Need For Your Fitness Journey</h2>

            <div class="grid md:grid-cols-3 gap-8">
                <!-- Feature 1 -->
                <div class="bg-white p-8 rounded-lg shadow-sm">
                    <div class="w-12 h-12 mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h.5A2.5 2.5 0 0020 5.5v-1.5" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold mb-3">Personal Training</h3>
                    <p class="text-gray-600">Connect with certified trainers and get personalized workout plans.</p>
                </div>

                <!-- Feature 2 -->
                <div class="bg-white p-8 rounded-lg shadow-sm">
                    <div class="w-12 h-12 mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold mb-3">Schedule Workouts</h3>
                    <p class="text-gray-600">Plan and track your training sessions with our intuitive calendar.</p>
                </div>

                <!-- Feature 3 -->
                <div class="bg-white p-8 rounded-lg shadow-sm">
                    <div class="w-12 h-12 mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold mb-3">Nutrition Tracking</h3>
                    <p class="text-gray-600">Monitor your calorie intake and maintain a balanced diet.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-black text-white">
        <div class=" mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold mb-6">Start Your Fitness Journey Today</h2>
            <p class="text-lg mb-8 max-w-2xl mx-auto">
                Join thousands of users who have already transformed their lives with My Fitness project.
            </p>
            <a href="#"
               class="bg-white text-black px-8 py-3 rounded-md font-medium hover:bg-gray-100 transition inline-block">
                Sign Up Now
            </a>
        </div>
    </section>
</body>
</html>