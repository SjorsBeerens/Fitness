@page "/personal-trainer/TrainerProfile/{name}"
@model Fitness.Pages.PersonalTrainer.TrainerProfileModel
@{
    ViewData["Title"] = "TrainerProfile - Fitness";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trainer Profile - Fitness Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-50">
    <main class="container mx-auto px-4 py-8">
        @if (Model.Trainer != null)
        {
            <div class="bg-white p-6 rounded-lg shadow-sm mb-8">
                <div class="flex flex-col md:flex-row">
                    <div class="w-32 h-32 md:w-64 md:h-64 mb-4 md:mb-0 md:mr-8">
                        <svg viewBox="0 0 100 100" class="w-full h-full">
                            <circle cx="50" cy="35" r="25" fill="black" />
                            <path d="M50,65 C30,65 15,80 15,100 L85,100 C85,80 70,65 50,65 Z" fill="black" />
                            <path d="M35,35 C35,35 40,40 50,35 C60,40 65,35 65,35" fill="none" stroke="white" stroke-width="2" />
                            <circle cx="35" cy="25" r="5" fill="white" />
                            <circle cx="65" cy="25" r="5" fill="white" />
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold mb-2">@Model.Trainer.Name</h1>
                        <div class="flex items-center mb-4">
                            <div class="flex">
                                @for (int i = 0; i < Math.Floor(Model.Trainer.Rating); i++)
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                }
                            </div>
                            <span class="ml-1 text-gray-600">(@Model.Trainer.Rating)</span>
                        </div>

                        <div class="space-y-3 mb-4">
                            <div class="flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                <span>@Model.Trainer.Specialty</span>
                            </div>
                            <div class="flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                                </svg>
                                <span>@Model.Trainer.Experience</span>
                            </div>
                            <div class="flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span>@Model.Trainer.Price</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p class="text-center text-gray-500">Trainer not found.</p>
        }
    </main>
</body>
</html>
