@page
@model Fitness.Pages.PersonalTrainer.ConfirmBookingModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Booking - Fitness Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-50">
    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8 max-w-2xl">
        <h1 class="text-3xl font-bold mb-8 text-center">Confirm Your Booking</h1>

        <div class="bg-white p-8 rounded-lg shadow-sm mb-8">
            <!-- Trainer Info -->
            <div class="flex items-center mb-8 pb-6 border-b border-gray-200">
                <div class="w-16 h-16 mr-4">
                    <svg viewBox="0 0 100 100" class="w-full h-full">
                        <circle cx="50" cy="35" r="25" fill="black" />
                        <path d="M50,65 C30,65 15,80 15,100 L85,100 C85,80 70,65 50,65 Z" fill="black" />
                        <path d="M35,35 C35,35 40,40 50,35 C60,40 65,35 65,35" fill="none" stroke="white" stroke-width="2" />
                        <circle cx="35" cy="25" r="5" fill="white" />
                        <circle cx="65" cy="25" r="5" fill="white" />
                    </svg>
                </div>
                <div>
                    <h2 class="text-xl font-bold">Sarah Johnson</h2>
                    <p class="text-gray-600">Professional Fitness Trainer</p>
                </div>
            </div>

            <!-- Booking Details -->
            <div class="space-y-6">
                <div class="flex items-start">
                    <div class="w-6 h-6 mt-0.5 mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-gray-500 text-sm mb-1">Date</h3>
                        <p class="font-medium">March 4, 2025</p>
                    </div>
                </div>

                <div class="flex items-start">
                    <div class="w-6 h-6 mt-0.5 mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-gray-500 text-sm mb-1">Time</h3>
                        <p class="font-medium">10:00 AM - 11:00 AM</p>
                    </div>
                </div>

                <div class="flex items-start">
                    <div class="w-6 h-6 mt-0.5 mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h.5A2.5 2.5 0 0020 5.5v-1.5" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-gray-500 text-sm mb-1">Session Type</h3>
                        <p class="font-medium">Strength Training</p>
                    </div>
                </div>

                <div class="flex items-start">
                    <div class="w-6 h-6 mt-0.5 mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-gray-500 text-sm mb-1">Total Price</h3>
                        <p class="font-medium">$75.00</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="grid grid-cols-2 gap-4">
            <a href="trainer-profile.html" class="bg-gray-200 text-gray-800 px-4 py-3 rounded-md text-center hover:bg-gray-300 transition">
                Edit Booking
            </a>
            <a href="scheduled-sessions.html" class="bg-black text-white px-4 py-3 rounded-md text-center hover:bg-gray-800 transition">
                Confirm Booking
            </a>
        </div>
    </main>
</body>
</html>