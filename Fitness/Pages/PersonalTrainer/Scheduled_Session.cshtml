@page
@model Fitness.Pages.PersonalTrainer.Scheduled_SessionModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scheduled Sessions - Fitness Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-50">
    <!-- Navigation -->
    <header class="bg-white border-b">
        <div class="container mx-auto px-4 py-4 flex items-center justify-between">
            <div class="flex items-center space-x-2">
                <div class="w-8 h-8">
                    <svg viewBox="0 0 100 100" class="w-full h-full">
                        <path d="M50,10 C60,10 70,15 75,25 C80,15 90,10 95,20 C100,30 90,40 85,45 C90,50 95,60 90,70 C85,80 75,75 70,70 C65,80 55,90 50,90 C45,90 35,80 30,70 C25,75 15,80 10,70 C5,60 10,50 15,45 C10,40 0,30 5,20 C10,10 20,15 25,25 C30,15 40,10 50,10 Z"
                              fill="none"
                              stroke="currentColor"
                              stroke-width="2" />
                    </svg>
                </div>
                <span class="font-bold text-xl">Fitness</span>
            </div>

            <nav class="hidden md:flex items-center space-x-8">
                <a href="personal-trainers.html" class="text-gray-800 hover:text-gray-600">Personal Trainer</a>
                <a href="#" class="text-gray-800 hover:text-gray-600">Training Schedule</a>
                <a href="#" class="text-gray-800 hover:text-gray-600">Log Workouts</a>
                <a href="#" class="text-gray-800 hover:text-gray-600">Food</a>
                <a href="#" class="text-gray-800 hover:text-gray-600">Progress</a>
            </nav>

            <div class="flex items-center">
                <button class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                </button>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Scheduled Sessions</h1>

        <!-- View Toggle -->
        <div class="mb-8">
            <div class="inline-flex rounded-md shadow-sm" role="group">
                <button type="button" class="px-4 py-2 text-sm font-medium bg-gray-200 border border-gray-300 rounded-l-lg flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Calendar View
                </button>
                <button type="button" class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 rounded-r-lg flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                    </svg>
                    List View
                </button>
            </div>
        </div>

        <!-- Sessions List -->
        <div class="space-y-6">
            <!-- Session 1 -->
            <div class="bg-white p-6 rounded-lg shadow-sm">
                <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                    <div class="flex items-start mb-4 md:mb-0">
                        <div class="w-16 h-16 mr-4">
                            <svg viewBox="0 0 100 100" class="w-full h-full">
                                <circle cx="50" cy="35" r="25" fill="black" />
                                <path d="M50,65 C30,65 15,80 15,100 L85,100 C85,80 70,65 50,65 Z" fill="black" />
                                <path d="M35,35 C35,35 40,40 50,35 C60,40 65,35 65,35" fill="none" stroke="white" stroke-width="2" />
                                <circle cx="35" cy="25" r="5" fill="white" />
                                <circle cx="65" cy="25" r="5" fill="white" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Sarah Johnson</h2>
                            <p class="text-gray-600">Strength Training</p>
                        </div>
                    </div>
                    <div class="bg-green-100 text-green-800 text-sm px-3 py-1 rounded-full">
                        Confirmed
                    </div>
                </div>

                <div class="flex flex-col md:flex-row md:items-center mb-6">
                    <div class="flex items-center mb-2 md:mb-0 md:mr-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span>Jan 15, 2025</span>
                    </div>
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span>10:00 AM</span>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <button class="bg-gray-100 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-200 transition">
                        Reschedule
                    </button>
                    <button class="bg-white border border-gray-300 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-50 transition">
                        Cancel
                    </button>
                </div>
            </div>

            <!-- Session 2 -->
            <div class="bg-white p-6 rounded-lg shadow-sm">
                <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                    <div class="flex items-start mb-4 md:mb-0">
                        <div class="w-16 h-16 mr-4">
                            <svg viewBox="0 0 100 100" class="w-full h-full">
                                <circle cx="50" cy="35" r="25" fill="black" />
                                <path d="M50,65 C30,65 15,80 15,100 L85,100 C85,80 70,65 50,65 Z" fill="black" />
                                <path d="M35,35 C35,35 40,40 50,35 C60,40 65,35 65,35" fill="none" stroke="white" stroke-width="2" />
                                <circle cx="35" cy="25" r="5" fill="white" />
                                <circle cx="65" cy="25" r="5" fill="white" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold">Mike Thompson</h2>
                            <p class="text-gray-600">Cardio Training</p>
                        </div>
                    </div>
                    <div class="bg-yellow-100 text-yellow-800 text-sm px-3 py-1 rounded-full">
                        Rescheduled
                    </div>
                </div>

                <div class="flex flex-col md:flex-row md:items-center mb-6">
                    <div class="flex items-center mb-2 md:mb-0 md:mr-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span>Jan 17, 2025</span>
                    </div>
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span>2:30 PM</span>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <button class="bg-gray-100 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-200 transition">
                        Reschedule
                    </button>
                    <button class="bg-white border border-gray-300 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-50 transition">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </main>
</body>
</html>